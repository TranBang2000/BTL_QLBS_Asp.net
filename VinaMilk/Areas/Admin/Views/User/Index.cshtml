@model PagedList.IPagedList<Models.EF.TaiKhoan>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản Lý Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2 style="display: flex; justify-content: center; font-size: 35px; font-weight: 400">Danh Sách Người Dùng</h2>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"></h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input style="border-radius: 15px; width: 300px; padding: 10px; outline-color: #27f;border-color:#000" type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập Từ Khóa Tìm Kiếm..." />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" value="Tìm Kiếm" style="margin: 10px 0; border-radius: 10px; border-color: #27f;color:#fff; width: 60px; background-color: #27f ">Tìm</button>
                            </div>
                        </div>
                    </div>
                }
                <div>
                    <a style="padding: 5px; color: #fff; position: relative; top: -60px; left: 800px; border-radius: 5px;" href="/Admin/User/Create" class="btn-success">
                        Thêm tài khoản
                    </a>
                </div>
                    <div class="table-responsive" style="width:100%;">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Tài Khoản</th>
                                    <th style="text-align:center;">Họ tên</th>
                                    <th>Email</th>
                                    <th>SĐT</th>
                                    <th>Địa chỉ</th>
                                    <th>Phân Quyền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.TenTK</td>
                                        <td>@item.HoTen</td>
                                        <td>@item.Email</td>
                                        <td>@item.SDT</td>
                                        <td>@item.Dia_Chi</td>
                                        @if (@item.Quyen == 0)
                                        {
                                            <td>Khách Hàng</td>
                                        }
                                        else
                                        {
                                            <td>Quản Trị Website</td>
                                        }
                                    </tr>
                                <td colspan="6">
                                    <a style="padding: 5px; color: #fff; margin-left: 25%; border-radius: 5px;" href="/Admin/User/Edit?tenTK/@item.TenTK" class="btn-warning">Sửa Tài Khoản</a>

                                    <a style="padding: 5px; color: #fff; margin-left: 25%; border-radius: 5px; " href="/Admin/User/Delete?tenTK/@item.TenTK" class="btn-danger">Xóa Tài Khoản</a>
                                </td>
                            }
                                </tbody>
                            </table>
                            <div style="display:flex;justify-content:space-around">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                            </div>
                        </div>
                    </div>
                </div>

        </div>
</div>