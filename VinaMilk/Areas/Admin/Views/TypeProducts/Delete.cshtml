@model Models.EF.DanhMuc

@{
    ViewBag.Title = "Xóa Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:100px">

    <h3 style="text-align:center">Bạn có chắc chắn muốn xóa danh mục sản phẩm này?</h3>
    <div style="width:26%; margin:20px auto 0px auto">

        @using (Html.BeginForm("Delete", "TypeProducts", FormMethod.Post, htmlAttributes: new { @style = "margin-top:20px" }))
        {
            @Html.AntiForgeryToken()
            @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @style = "margin:20px 0", @class = "form-control" } })


            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-warning" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        }
    </div>
    @if (ViewBag.Error != null)
    {
        <br />
        <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
    }
</div>

@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error </div>
}