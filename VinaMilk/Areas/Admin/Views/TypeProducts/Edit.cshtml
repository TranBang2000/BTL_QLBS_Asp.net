
@model Models.EF.DanhMuc

@{
    ViewBag.Title = "Cập Nhật Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:80px">
    <h2 style="display: flex; justify-content: center; font-size: 35px; font-weight: 400">Cập Nhật Danh Mục Sản Phẩm</h2>


    @using (Html.BeginForm("Edit", "TypeProducts", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="margin-left: 20px; font-weight: 400 ">Danh Mục Sản Phẩm</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="display: flex; align-items: center; width: 76%;">
                @Html.LabelFor(model => model.MaDM, "Mã Danh Mục", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="display: flex; align-items: center; width: 76%;">
                @Html.LabelFor(model => model.TenDM, "Tên Danh Mục", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="display: flex; align-items: center; justify-content: center;">
                    <input type="submit" style="font-size: 18px; margin-top: 22px; background-color: #7c548f; color: #fff;" value="Sửa" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        <a href="/Admin/TypeProducts/Index" style="text-decoration: none; margin-left:20px;">Quay lại</a>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error </div>
}