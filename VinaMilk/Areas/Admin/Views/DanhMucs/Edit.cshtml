@model VinaMilk.Models.DanhMuc

@{
    ViewBag.Title = "Cập Nhật Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:80px">
    <h2 style="display: flex; justify-content: center; font-size: 35px; font-weight: 400">Cập Nhật Danh Mục Sản Phẩm</h2>
    @using (Html.BeginForm("Edit", "DanhMucs", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaDM)

            <div class="form-group" style="width:78%">
                @Html.LabelFor(model => model.TenDM, "Tên Danh Mục", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-left:10px">
                <div style="margin-left:300px" class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập Nhật" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở Về", "Index")
    </div>
</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error </div>
}